{
  "title": "Single right alt swaps jkl; to arrows",
  "rules": [
    {
      "description": "Right option swaps layout",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "set_variable": {
                "name": "arrow_layout_enabled",
                "value": 0
              }
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_option"
            }  
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_layout_enabled",
              "value": 1
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 300,
            "basic.to_if_held_down_threshold_milliseconds": 0
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_alone": [
            {
              "set_variable": {
                "name": "arrow_layout_enabled",
                "value": 1
              }
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_option"
            }  
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_layout_enabled",
              "value": 0
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 300,
            "basic.to_if_held_down_threshold_milliseconds": 0
          }
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
             "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_layout_enabled",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
             "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_layout_enabled",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
             "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_layout_enabled",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
             "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_layout_enabled",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}